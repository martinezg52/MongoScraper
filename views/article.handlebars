<!--Area for article to be displayed-->

<div class="row">
    <h3 class="card">{{article.title}}</h3>
    <h5 class="card-panel articleBody">{{body}}</h5>
</div>

<!--Form that will handle POST request of article ID-->

<div class="row">
    <div class="col s2"></div>
    <form action="/comment/{{article._id}}" method="POST" class="card-panel col s8">
        <h5>Comment on this News Article</h5>
        <div class="row">
            <div class="input-field">
                <i class="material-icons prefix">perm_identity</i>
                <input id="icon_prefix" type="text" placeholder="Name" name="name" class="validate active">
            </div>

<!--Comment input field, all the way at the bottom is the body for comment inside a p tag-->

            <div class="input-field">
                <i class="material-icons prefix">Comment</i>
                <input id="icon_telephone" type="text" placeholder="Comment" name="comment" class="validate active">
            </div>

        </div>
        <div class="row">
            <div class="input-field">
                <center><input class="btn add-comment-button topnav" type="submit" value="Submit"></center>
            </div>
        </div>
    </form>
</div>
<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <h5>Comments:</h5>
        {{#if article.comment}}
        {{#each article.comment}}
        <div class="card">
            <p id="nameComment">{{name}}</p>
            <p>{{body}}<p>
        </div>
        {{/each}}
        {{else}}
        <p>No Comments Yet.</p>
        {{/if}}

    </div>
</div>